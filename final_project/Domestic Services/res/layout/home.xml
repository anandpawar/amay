
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.menu.MainActivity" 
    android:background="@drawable/gradient"
    >

    <Button
        android:id="@+id/plumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="40dp"
        android:background="#89CFF0"
        android:text="PLUMBER" 
        android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/cooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/plumber"
        android:layout_alignRight="@+id/plumber"
        android:layout_below="@+id/plumber"
        android:layout_marginTop="26dp"
        android:background="#89CFF0"
        android:text="CLEANING" />

    <Button
        android:id="@+id/electrician"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cooking"
        android:layout_alignRight="@+id/cooking"
        android:layout_below="@+id/cooking"
        android:layout_marginTop="31dp"
        android:background="#89CFF0"
        android:text="ELECTRICIAN" />

    <Button
        android:id="@+id/laundry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/electrician"
        android:layout_alignRight="@+id/electrician"
        android:layout_below="@+id/electrician"
        android:layout_marginTop="32dp"
        android:background="#89CFF0"
        android:text="LAUNDRY" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Home"
        android:textSize="30sp" />

        <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="0dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" >
    </com.google.android.gms.ads.AdView>
    

</RelativeLayout>
